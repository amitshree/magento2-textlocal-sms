<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="amitshree_textlocal" translate="label" sortOrder="101">
            <label>Text Local Sms</label>
        </tab>
        <section id="textlocal" translate="label" sortOrder="500" showInDefault="1" showInWebsite="0" showInStore="0">
            <class>separator-top</class>
            <label>Text Local</label>
            <tab>amitshree_textlocal</tab>
            <resource>Amitshree_TextLocalSms::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="test_mode_enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Test Mode Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Api Key</label>
                </field>
                <field id="sender_name" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Sender Name</label>
                </field>
                <field id="registration_message" translate="label" type="textarea" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Message</label>
                    <comment><![CDATA[Use {{first_name}} variable for customer's first name.]]></comment>
                </field>
                <field id="order_success_message" translate="label" type="textarea" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Order success message</label>
                    <comment><![CDATA[Use {{first_name}} variable for customer's first name & {{order_id}} variable for order id.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
